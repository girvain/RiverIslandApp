<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="trending">
        <item name="android:background">@color/design_default_color_on_secondary</item>
        <item name="android:textSize">12dp</item>
<!--        <item name="android:padding">10dp</item>-->
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="trending_single">
        <item name="android:background">@color/design_default_color_on_secondary</item>
        <item name="android:textSize">18dp</item>
        <!--        <item name="android:padding">10dp</item>-->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="prodName">
        <item name="android:textSize">16dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="prodName_single">
        <item name="android:textSize">24dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <style name="prodCost">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="prodCost_single">
<!--        <item name="android:textColor">#000000</item>-->
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="heading">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sub_heading">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="sub_heading_bold">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="viewpager_home">
        <item name="android:layout_height">388dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>
